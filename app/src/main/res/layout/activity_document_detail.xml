<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controllers.Activity.DocumentDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:gravity="top"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="Tiêu đề: "
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:textSize="20sp"
            android:gravity="top"
            android:id="@+id/edit_Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="top"
        >
        <TextView
            android:textColor="@color/black"
            android:gravity="top"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Nơi gửi : " />

        <TextView
            android:textSize="20sp"
            android:gravity="top"
            android:id="@+id/spnRoot"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="top"
        >
        <TextView
            android:gravity="top"
            android:textColor="@color/black"

            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Nơi nhận : " />

        <TextView
            android:textSize="20sp"
            android:gravity="top"
            android:id="@+id/spnRecipients"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="top"
        >
        <TextView
            android:textColor="@color/black"
            android:gravity="top"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Loại văn bản : " />

        <TextView
            android:textSize="20sp"
            android:gravity="top"
            android:id="@+id/spnDocType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:gravity="top"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Mức độ : " />

        <TextView
            android:textSize="20sp"
            android:gravity="top"
            android:id="@+id/spnLevel"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        >
        <TextView
            android:textColor="@color/black"
            android:gravity="top"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Tệp đính kèm : " />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtFilePdf"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="file"
                android:layout_width="200dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Nội dung: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/edit_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_action"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/radius_button_account"
        android:text="Duyệt" />
</LinearLayout>

