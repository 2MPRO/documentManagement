<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_user"/>

    <Button
        android:id="@+id/btn_PhanQuyen"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Phân quyền"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/radius_button_account"/>

    <Button
        android:id="@+id/btn_QuanLy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Quản lý tài khoản"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/radius_button_account"/>

    <Button
        android:id="@+id/btn_ThongTinTK"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Thông tin tài khoản"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/radius_button_account"/>

    <Button
        android:id="@+id/btn_DangXuat"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Đăng xuất"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/noclick"
        android:background="@drawable/radius_button_account"/>

</LinearLayout>