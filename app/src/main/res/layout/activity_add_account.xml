<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_user"/>

    <EditText
        android:fontFamily="@font/serif"
        android:textSize="16sp"
        android:id="@+id/etName"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="15dp"
        android:hint="Họ và tên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:fontFamily="@font/serif"
        android:textSize="16sp"
        android:id="@+id/etEmail"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="15dp"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:fontFamily="@font/serif"
            android:textSize="16dp"
            android:id="@+id/etPassword"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/hide_password_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-55dp"
            android:layout_toRightOf="@+id/edittextdnpassword"
            android:background="@drawable/eye_hiddent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:fontFamily="@font/serif"
            android:id="@+id/etReneterPassword"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:hint="Nhập lại mật khẩu"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/hide_password_re"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-55dp"
            android:layout_toRightOf="@+id/edittextdnpassword"
            android:background="@drawable/eye_hiddent" />
    </LinearLayout>

    <Button
        android:id="@+id/btnThemTaiKhoan"
        android:layout_gravity="center"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="15dp"
        android:background="@drawable/radius_button_account"
        android:text="Thêm tài khoản" />

</LinearLayout>