    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:fontFamily="@font/serif"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:id="@+id/etName"
            android:hint="Họ tên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:fontFamily="@font/serif"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:id="@+id/etBirthDay"
            android:hint="Ngày sinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:fontFamily="@font/serif"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:id="@+id/etSex"
            android:hint="Giới tính"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:fontFamily="@font/serif"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:id="@+id/etAddress"
            android:hint="Địa chỉ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:fontFamily="@font/serif"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:id="@+id/etAccount"
            android:hint="Tài khoản"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:id="@+id/etPassword"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/hide_password_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-55dp"
            android:layout_toRightOf="@+id/edittextdnpassword"
            android:background="@drawable/eye_hiddent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/serif"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:id="@+id/etReneterPassword"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/hide_password_re"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-55dp"
            android:layout_toRightOf="@+id/edittextdnpassword"
            android:background="@drawable/eye_hiddent" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:textColor="#E80808"
            android:gravity="center_vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Phòng ban : " />

        <Spinner
            android:background="@color/transparent"
            android:id="@+id/spnPosition"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/btnThemTaiKhoan"
        android:layout_gravity="center"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="15dp"
        android:background="@drawable/radius_button_account"
        android:text="Thêm" />

</LinearLayout>